<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="1000dip"
  android:layout_height="wrap_content">
  <TextView 
	 	android:id="@+id/tvStuinfo2"
	 	android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自主学习"
        android:textSize="30sp"
        android:textColor="#f0000000"
        android:gravity="center"
        android:background="#3A5FCD"
        android:layout_alignParentTop="true"
        />
    <GridView
         android:id="@+id/stugridview"
  		android:verticalSpacing="0dp"
  		android:scrollbarStyle="outsideOverlay"
  		android:layout_marginRight="5dp"
         android:layout_width="600dip"
         android:layout_height="550dip"
         android:numColumns="5"
         android:horizontalSpacing="0dip"
         android:background="#40E0D0"
         android:gravity="center"
         android:layout_below="@id/tvStuinfo2">
	</GridView>
	<Button android:id="@+id/stuOK"
		android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/stugridview"	
         android:text="加入"
	/>
	<Button android:id="@+id/stuCancle"
			android:layout_width="wrap_content"
    	    android:layout_height="wrap_content"
    	    android:layout_toRightOf="@id/stuOK"
    	    android:layout_below="@id/stugridview"
    	    android:text="退出"
	/>
	<ScrollView android:id="@+id/SVstu"
		android:layout_width="400dip"
        android:layout_height="600dip"
         android:scrollbars="vertical"
         android:fadingEdge="none"
         android:background="#8B6914"
         android:fadeScrollbars="false"
         android:layout_toRightOf="@id/stugridview"
         android:layout_below="@id/tvStuinfo2"
 		>
	<TextView 
	 	android:id="@+id/tvStuinfo"
	 	android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:textSize="20sp"
        android:textColor="#f0000000"
        />
 </ScrollView>
     
</RelativeLayout>
